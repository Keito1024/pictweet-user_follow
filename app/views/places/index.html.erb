<h1 style="text-align:center;margin-top:50px;font-size:30px;">Listing Places</h1>

<table style="width:700px;margin:30px auto 20px auto;">
  <thead>
    <tr>
      <th style="padding-right:70px;">Description</th>
      <th>Address</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="width:700px;">
    <% @places.each do |place| %>
      <tr>

        <td style="width:175px;padding-right:70px;text-align:center;"><%= place.description %></td>

        <td style="padding-right:30px;"><%= place.address %></td>
        <!-- <td><%= place.latitude %></td>
        <td><%= place.longitude %></td> -->
        <td ><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>
<div style="    display: block;margin: 0 auto;width: 500px;text-align: center;">
  <%= link_to '住所登録', new_place_path,:style =>"margin-right:50px;"%>
  <%= link_to '地図を見る', map_index_path %>
</div>
